Screen:

    MDCard:
        size_hint: None, None
        size: 800, 1200
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 5
        padding: 25
        spacing: 25
        orientation: 'vertical'
        BoxLayout:
            spacing: 50
            orientation: 'vertical'
            MDLabel:
                id: welcome_label
                text: "Добро пожаловать"
                font_size: 100
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 70

            MDTextField:
                id: user
                hint_text: "username"
                icon_right: "account"
                size_hint_x: None
                width: 600
                spacing: 100
                font_size: 78
                pos_hint: {'center_x': 0.5, 'center_y':0.5}
                mode: 'round'

            MDTextField:
                id: password
                hint_text: "password"
                icon_right: "eye-off"
                size_hint_x: None
                width: 600
                font_size: 78
                pos_hint: {'center_x': 0.5, 'center_y':0.5}
                mode: 'round'
                password: True

            MDTextField:
                id: grade
                hint_text: "grade"
                icon_right: "account"
                size_hint_x: None
                width: 600
                font_size: 78
                pos_hint: {'center_x': 0.5, 'center_y':0.5}
                mode: 'round'

            MDRoundFlatButton:
                text: "Войти"
                font_size: 50
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: app.logger()
